<project>
    <modelVersion>4.0.0</modelVersion>
    <groupId>com.btmatthews.maven.plugins.ldap</groupId>
    <artifactId>HelloWorld</artifactId>
    <version>1.0.0</version>
    <packaging>jar</packaging>
    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
    </properties>
    <build>
        <plugins>
            <plugin>
                <groupId>com.btmatthews.maven.plugins</groupId>
                <artifactId>ldap-maven-plugin</artifactId>
                <version>@project.version@</version>
                <executions>
                    <execution>
                        <id>start-server</id>
                        <phase>pre-integration-test</phase>
                        <goals>
                            <goal>run</goal>
                        </goals>
                        <configuration>
                            <monitorPort>11389</monitorPort>
                            <monitorKey>ldap</monitorKey>
                            <serverType>unboundid</serverType>
                            <daemon>true</daemon>
                            <rootDn>dc=btmatthews,dc=com</rootDn>
                            <ldapPort>10389</ldapPort>
                            <ldifFile>initial.ldif</ldifFile>
                        </configuration>
                    </execution>
                    <execution>
                        <id>dump</id>
                        <phase>integration-test</phase>
                        <goals>
                            <goal>dump</goal>
                        </goals>
                        <configuration>
                            <host>localhost</host>
                            <port>10389</port>
                            <authDn>uid=admin,ou=system</authDn>
                            <passwd>secret</passwd>
                            <searchBase>dc=btmatthews,dc=com</searchBase>
                            <filename>dump.ldif</filename>
                            <format>ldif</format>
                        </configuration>
                    </execution>
                    <execution>
                        <id>stop-server</id>
                        <phase>post-integration-test</phase>
                        <goals>
                            <goal>stop</goal>
                        </goals>
                        <configuration>
                            <monitorPort>11389</monitorPort>
                            <monitorKey>ldap</monitorKey>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>